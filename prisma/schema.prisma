// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String @id @default(uuid())
  name       String
  email      String
  password   String
  role       Roles  @default(customer)
  contactNo  String
  address    String
  profileImg String

  @@map("users")
}

model Category {
  id    String @id @default(uuid())
  title String

  @@map("categories")
}

enum Roles {
  admin
  customer
}
